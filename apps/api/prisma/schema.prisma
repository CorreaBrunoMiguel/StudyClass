enum Role {
  ALUNO
  ADMIN
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String?
  role         Role     @default(ALUNO)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model EmailWhitelist {
  email     String   @id
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
}

datasource db {
  provider = "postgresql"
}
